generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String @id @default(cuid())
  emailAddress String @unique
  firstName    String
  lastName     String
  imageUrl     String
  chats        Chat[]
}

model Chat {
  id        String    @id @default(cuid())
  title     String
  summary   String
  user_id   String
  createdAt DateTime  @default(now())
  messages  Message[]

  account Account @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  role      String
  content   String
  createdAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id])

  @@index([chatId])
}
